<div class="col-12">
	<div class="content">
		<div class="content-content">
			<div class="text">
				<h1>Blog</h1>
				<p>Occasional thoughts from me to you.</p>
				
				{% for post in collections.posts | reverse %}
					<div class="blog-entry-block position-relative">
						<a href="{{ post.url }}" class="link-overflow"></a>
						<time class="date"><i class="fa-regular fa-clock me-1"></i> {{ post.data.date.toISOString().split('T')[0] }}</time>
						<p class="title">{{ post.data.entryTitle }}</p>
						<p class="description">{{ post.data.summary }}</p>
						<a href="{{ post.url }}">Read post <i class="fas fa-arrow-right ms-2"></i></a>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
</div>